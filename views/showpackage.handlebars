<section id="showpackage-container">
    <div id="packageimage-container">
        <img src="../{{packageImage}}" alt="Uploaded-Image">
    </div>
    <div id="pacagedesc-container">
        <h2 id="package-title">{{packageTitle}}</h2>
        <div id="package-price">${{packagePrice}}</div>
        <p id="meal-qtn">How many meals did you want in your package?</p>
        <div id="seperator"></div>
        <div id="package-meal">{{packageMeals}}</div>
        <div id="meal-desc">{{packageDesc}}</div>
        <form method="POST" action="/cart/{{packageId}}">
            <div id="orderQtn" >
                <label for="packageQtn">Quantity</label>
                <input type="number" id="packageQtn" name="packageQtn" value=1>
            </div> 
            <button type="submit" >Add to cart</button>
        </form>
        
